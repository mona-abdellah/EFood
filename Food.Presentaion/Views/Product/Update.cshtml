@model CreateORUpdateProductDTO

@{
	SelectList categories = new SelectList(ViewBag.Categories, "Id", "Name");
}
<h1>Update Product</h1>
<form method="post" enctype="multipart/form-data">
	<div asp-validation-summary="All">
	</div>
	<div class="form-group" hidden>
		<label asp-for="Id"></label>
		<input class="form-control" asp-for="Id">
	</div>
	<div class="mb-3">
		<label asp-for="name">product Name</label>
		<input type="text" asp-for="name" class="form-control" />
		<span asp-validation-for="name" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="price">price</label>
		<input type="text" asp-for="price" class="form-control" />
		<span asp-validation-for="price" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="stock">stock</label>
		<input type="text" asp-for="stock" class="form-control" />
		<span asp-validation-for="stock" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="ImageData">Upload Image</label>
		<input type="file" asp-for="ImageData" multiple accept="image/*" class="form-control" />
		<span asp-validation-for="ImageData" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="CategoryId">Category</label>
		<select asp-for="CategoryId" asp-items="categories"></select>
		<span asp-validation-for="CategoryId" style="color:red"></span>
	</div>
	<button type="submit" class="btn btn-primary">Update</button>
</form>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>